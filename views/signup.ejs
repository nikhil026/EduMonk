<!doctype html>
<html>
<head>
    <title>EduMonk</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
              body         { padding-top:60px;
            font-size:25px;}
    </style>
</head>
<body>
<div class="container" >
    <div >

        <div class="col-lg-5 col-lg-offset-3 col-xs-10 col-xs-offset-1" style="border:0.5px solid grey;padding:20px">
            <div style="border:0.5px solid grey">
                <img src="http://edumonk.herokuapp.com:8080/logo.png" height="300px" width="250px" style="margin-left:100px" >
            </div>
            <h1><span class="fa fa-sign-in"></span> Signup</h1>
            <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/auth/signup" method="post" name="myForm" onsubmit="return validateForm()">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input type="password" class="form-control" name="confirmPassword">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/auth/login">Login</a></p>
    <p>Or go <a href="/auth">home</a>.</p>

</div>

    </div>
</div>
<script>
    function validateForm() {
        var p = document.forms["myForm"]["password"].value;
        var c = document.forms["myForm"]["confirmPassword"].value;
        console.log(c);
        console.log(p);
        if (!(p===c)) {
            alert("Confirm Password Mismatch");
            return false;
        }
        return true;
    }
</script>
</body>
</html>
