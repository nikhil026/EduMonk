    <style>
        body{
            padding-top:0px; word-wrap:break-word;
            overflow-x: hidden;
        }
        .btn-circle {
            border-radius:50%;
            width:90px;
            height:90px;
            font-size:14px;}
        .well{height:200px;
            width:300px;
        }
        .btn-icon{
            height:30px;
            width:30px;
            border-radius:50%;
        }
        #formContainer{
            background-color:rgba(0,0,0,0.8);
            z-index:5;
            height:900px;
            color:white;
            display:none;
            position:absolute;
            top:100px;
            font-size:20px;
        }

        #personalInfo:target, #personalInfo:target + #cover{
            display:block;
            opacity:2;
        }
        .cancel
        {
            display:block;
            position:absolute;
            top:3px;
            right:2px;

            color:black;
            height:30px;
            width:35px;
            font-size:30px;
            text-decoration:none;
            text-align:center;
            font-weight:bold;
        }
        .submissionError{
            color:red;
            font:15px;
        }
     #portfolio{
         background-color:yellow;
         font-size:50px;
         text-align:center;
         height:100px;
         padding:10px;
     }
        #myblog{
            background-color:red;
            font-size:50px;
            text-align:center;
            height:100px;
            padding:10px;
        }
    </style>
</head>
<div>

<!--hidden from the end user-->
<div>
    <span style="display:none"  id="googleId"><%= user.google.id %></span>
    <span style="display:none"  id="facebookId"><%= user.facebook.id %></span>
    <span   style="display:none" id="personalInfoExisting"><%= (user.data.info.name)%></span>
</div>

