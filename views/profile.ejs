                            <button style="float:right" class="btn btn-primary"  onclick="readBlog(this)">Read</button>

            </span>
                        <p id="blog-content" style="display:none"><%= user.data.blogs[i].content %></p>
                    </div>
                    <% } %>

                </div>

            </div>
        </div>
    </div>

</div>





    </div>
</div>




</body>

